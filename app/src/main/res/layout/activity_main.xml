<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ru.minilan.sensorsview.TempView
        android:id="@+id/tempView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temperature_no_data"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/humidity_no_data"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lightsensor_no_data"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSensorsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/sensors_list_no_data" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>